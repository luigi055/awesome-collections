{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "npmClient": "pnpm",
  "version": "independent",
  "useNx": false,
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): bump up version %s",
      "allowBranch": ["main"]
    },
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["main"],
      "message": "chore(release): publish package %s",
      "yes": true
    }
  }
}
